<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/doc_bg"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/doc_item_status_pad_top"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/doc_item_padding_left_right"
            android:paddingRight="@dimen/doc_item_padding_left_right"
            android:background="@drawable/bg_parent_rounded_corner"
            android:weightSum="1">

            <com.smith.ireland8.Utils.ArticleImageView
                android:id="@+id/articleImage"
                android:layout_width="@dimen/doc_item_profile_pic"
                android:layout_height="@dimen/doc_item_profile_pic"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/txt"
                    android:textStyle="normal|bold"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/update_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/txt"
                    android:textStyle="normal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />
<!--                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_gravity="left">

                    <TextView
                        android:id="@+id/bedrooms"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/txt"
                        android:textStyle="bold"
                        android:textColor="@color/divider" />

                    <TextView
                        android:id="@+id/bathrooms"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/txt"
                        android:textStyle="bold"
                        android:textColor="@color/divider" />
                </LinearLayout>-->

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>